# Pinnacle AI Project Tracker - Production Configuration
# Copy this file to .env and update values as needed

# Database Configuration
DATABASE_URL=postgresql://postgres:root@postgres:5432/project-tracker

# Session Configuration
SESSION_SECRET=pinnacle-ai-super-secret-key-change-in-production-2024

# Server Configuration
PORT=7855
NODE_ENV=production

# Security Settings
BCRYPT_ROUNDS=10
JWT_SECRET=pinnacle-ai-jwt-secret-key-2024
SESSION_TIMEOUT=86400000

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/data/uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,jpg,jpeg,png,gif

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=20000
DB_POOL_CONNECT_TIMEOUT=10000

# Application Settings
APP_NAME=Pinnacle AI Project Tracker
APP_VERSION=1.0.0
APP_DESCRIPTION=Comprehensive Project Management System

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@pinnacle.ai

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Performance Settings
ENABLE_COMPRESSION=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:7855
REQUEST_TIMEOUT=30000

# Feature Flags
ENABLE_FILE_UPLOAD=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_BACKUP=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups

# Monitoring
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true